@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Index";
}
<style>
    div {
        background-color: ghostwhite;
        padding: 5px;
    }
</style>
<div class="container shadow p-5">

    <h1 class="text-center mb-3">MENU LIST </h1>
    <div>
        <a asp-controller="Product" asp-action="Create" class="btn btn-success"><i class="bi bi-file-plus-fill"></i>Add New Dish</a>
    </div>
    <div>
        <a asp-controller="Product" asp-action="Index" class="btn btn-warning"><i class="bi bi-file-plus-fill"></i>Back to Menu List</a>
    </div>
    <br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>

                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.Id
                    </td>
                    <td width="30%">
                        @item.Name
                    </td>
                    <td width="20%">
                        @item.Description
                    </td>
                    <td width="20%">
                        @item.Quantity
                    </td>
                    <td width="20%">
                        @item.Price
                    </td>
                    <td>
                        <div role="group" class="w-10 btn-group">

                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-info"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-sm btn-danger"><i class="bi bi-pencil-square"></i>Delete</a>&nbsp;
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

