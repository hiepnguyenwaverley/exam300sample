@model IEnumerable<CustViewModel>

@{
    ViewData["Title"] = "Index";
}
<style>
    div {
        background-color: ghostwhite;
        padding: 5px;
    }

</style>
<div class="container shadow p-5">

    <h1 class="text-center mb-3">LIST CUSTOMERS </h1>
    <div>
        <a asp-controller="Customer" asp-action="Create" class="btn btn-success"><i class="bi bi-file-plus-fill"></i>Add Customer</a>
    </div>
    <br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">Country</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.Id
                    </td>
                    <td width="30%">
                        @item.Name
                    </td>
                    <td width="10%">
                        @item.Phone
                    </td>
                    <td width="20%">
                        @item.Email
                    </td>
                    <td width="20%">
                        @item.Country
                    </td>



                    <td>
                        <div role="group" class="w-10 btn-group">

                            <a asp-controller="Customer" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-info"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a asp-controller="Customer" asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-sm btn-danger"><i class="bi bi-pencil-square"></i>Delete</a>&nbsp;

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

